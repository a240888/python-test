def demongame():
    b=str(input('Ans:'))
    if str(a)==str(b):
        t2=T.time()        
        print('用了%.2f秒'%(t2-t1))
        c=str(input('繼續(會跳回簡單難度)？y or n: '))
        if c=='y':
            global t
            t+=1
            easy()
        elif c=='n':
            print('結束!下次見:)')
        else:
            print('錯誤')
    else:
        print('打錯了哈哈')
        demongame()                   
def dgame():  
    b=str(input('Ans:'))
    if str(a)==str(b):
        t2=T.time()        
        print('用了%.2f秒'%(t2-t1))
        T.sleep(1)
        print('要調整難度的話請輸入adj')        
        c=str(input('繼續？y or n: '))
        if c=='y':
            global t
            t+=1
            if(t%10==0):
                demon()
            else:
                difficult()
        elif c=='n': 
            print('結束!下次見:)')
        elif c=='adj':
            t+=1
            adjust()
        else:
            print('錯誤')
    else:
        print('打錯了哈哈')
        dgame()
def game():  
    b=str(input('Ans:'))
    if str(a)==str(b):
        t2=T.time()
        print('用了%.2f秒'%(t2-t1))
        T.sleep(1)
        print('要調整難度的話請輸入adj')
        c=str(input('繼續？y or n: '))
        if c=='y':
            global t
            t+=1
            if (t%10==0):
                demon()
            elif (t%5==0):
                di=str(input('難度提高？y or n: '))
                if di=='y':
                    difficult()
                elif di=='n':
                    easy()
                else:
                    print('錯誤')
            else:
                easy()
        elif c=='n': 
            print('結束!下次見:)')
        elif c=='adj':
            t+=1
            adjust()
        else:
            print('錯誤')
    else:
        print('打錯了哈哈')
        game()
