import time as T
import random as r
#---------------------------------------------------------------------------------------------------
#難度調整
def adjust():
    print('----難度調整----')
    print('共有三個難度')
    T.sleep(0.5)
    print('easy是簡單難度，隨機刷新5個字元')
    T.sleep(0.5)
    print('baby是嬰兒難度，簡單的跟呼吸一樣，隨機刷新兩個字元')
    T.sleep(0.5)
    print('hard是困難難度，字元種類更多，隨機刷新5個字元')
    T.sleep(0.5)
    print('demon是地獄級難度，沒事不要虐待自己，字元種類更多，隨機刷新10個字元')
    T.sleep(0.5)
    adj=str(input('請輸入難度:'))
    if adj=='easy':
        easy()
    elif adj=='hard':
        difficult()
    elif adj=='baby':
        baby()
    elif adj=='demon':
        demon2()
    else:
        print('錯誤')
        adjust()
