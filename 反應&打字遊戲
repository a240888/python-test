#遊戲跟結算
def babygame():
    b=str(input('Ans:'))
    if str(a)==str(b):
        t2=T.time()        
        print('用了%.2f秒'%(t2-t1))
        T.sleep(1)
        print('要調整難度的話請輸入adj')        
        c=str(input('繼續？y or n: '))
        if c=='y':
            global t
            t+=1
            baby()
        elif c=='n': 
            print('結束!下次見:)')
        elif c=='adj': 
            t+=1
            adjust()
        else:
            print('錯誤')
    else:
        print('打錯了哈哈')
        babygame()              
