    global a,t1
    a=r.choice(str1)+r.choice(str1)
    print('倒數三秒開始')
    print('3')
    T.sleep(1)
    print('2')
    T.sleep(1)
    print('1')
    T.sleep(1)
    print('(嬰兒難度)第%d題:'%(t),end='')
    print(str(a))
    t1=T.time()
    babygame()
