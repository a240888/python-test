
while (True):
    a=int(input('請輸入一個比1大的整數：(輸入0結束)'))
    if a==0:
        print('結束')
        break
    else:    
        if a==2:
            print('2是質數')
        elif a==1:
            print('1不是質數')
        else:
            for i in range(2,a):
                if(a%i==0):
                    print("%d不是質數"%(a))
                    break
            else:     
                print("%d是質數"%(a))
